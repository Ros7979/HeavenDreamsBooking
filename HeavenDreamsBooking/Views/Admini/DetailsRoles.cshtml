@model List<IdentityRole>
@{
    ViewBag.Title = "All ROLES DETAILS";
}
<h2 class="text-center">@ViewBag.Title</h2>
@if (TempData["InfoMessage"] != null)
{
    <div class="alert alert-info">
        <strong>Information ! </strong> @TempData["InfoMessage"]     
    </div>
}
<hr />
<form>
    <table class="table table-responsive table-bordered table-hover">
        <thead>
            <tr class="table-active">                                     
                <th data-toggle="tooltip" data-placement="right" title="Role Name">Role Name</th>
                <th data-toggle="tooltip" data-placement="right" title="Normalized Name">Normalized Name</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var identityRole in Model)
                {
                    <tr>
                        <td>@identityRole.Name</td>
                        <td>@identityRole.NormalizedName</td>                                            
                        <td>
                            <div class="d-grid gap-1">
                                <a asp-controller="Flights" asp-action="Edit" asp-route-id="@identityRole.Id" class="btn btn-warning">Edit</a>
                                <form class="mt-1" asp-controller="Flights" asp-action="Delete" asp-route-id="@identityRole.Id">
                                    <div class="d-grid gap-1">
                                        <a asp-controller="Flights" asp-action="Delete" asp-route-id="@identityRole.Id" class="btn btn-danger">Delete</a>
                                    </div>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5">
                        <dialog>NO ROLES ADDED YET</dialog>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}




