@model IEnumerable<FlightIndexServiceModel>

@{
    ViewData["Title"] = "Home Page";
    var flights = Model.ToList();
}

@if (!flights.Any())
{
    <div class="mt-4 p-5 bg-light">
        <h1 class="display-4">Welcome to the best place for renting flights!</h1>
        <p class="lead">
            There are no flights in the system currently available.
            Why don't you just add one?
        </p>
        <hr class="my-4">
        <p class="lead">
            @if (User.Identity!.IsAuthenticated)
            {
                <a asp-controller="House" asp-action="Add" class="btn btn-primary btn-lg"
                   role="button">Add Flight</a>
            }
        </p>
    </div>
}

<div class="mb-5"></div>

<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        @for (int i = 0; i < flights.Count(); i++)
        {
            var flight = flights[i];
            <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                <img class="d-block w-100" style="height:230px" src="@flight.ImageUrl" alt="@flight.From">
                @*  @if (User.Identity?.IsAuthenticated == true)
            { *@

                @*  } *@

                <div class="carousel-caption d-none d-md-block">
                    <h5>
                        <a class="btn btn-primary" asp-controller="Reservation" asp-action="DestDetails" asp-route-id="@flight.Id">От : @flight.From - @flight.Destination</a>
                    </h5>
                </div>
                <br />
            </div>
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

